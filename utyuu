<html>
  <head>
    <meta charset="utf-8" />
    <script src="https://unpkg.com/three@0.137.4/build/three.min.js"></script>
    <script src="https://unpkg.com/three@0.137.4/examples/js/controls/OrbitControls.js"></script>
  </head>
<body>
 <script>
      // ページの読み込みを待つ
      window.addEventListener('DOMContentLoaded', init);

      function init() {
        // サイズを指定
        const width = 800
        const height = 600;

        // レンダラーを作成
        var renderer = new THREE.WebGLRenderer();
        document.body.appendChild(renderer.domElement);
        renderer.setSize(width, height);

        // シーンを作成
        const scene = new THREE.Scene();

        // カメラを作成
        const camera = new THREE.PerspectiveCamera(45, width / height);
        // カメラの初期座標を設定
        camera.position.set(0, 0, 40);

        // カメラコントローラーを作成
        const controls = new THREE.OrbitControls(camera, document.body); 
        
        // 平行光源1
        var directionalLight1 = new THREE.DirectionalLight(0xffffff);
        directionalLight1.position.set(-50, 0, 0);
        // 平行光源1
        var directionalLight2 = new THREE.DirectionalLight(0xffffff);
        directionalLight2.position.set(50, 0, 0);
        // シーンに追加
        scene.add(directionalLight1);
        scene.add(directionalLight2);
  
        // helper
        const gridHelper = new THREE.GridHelper(2,10); // size, step
        scene.add(gridHelper);
        const axisHelper = new THREE.AxisHelper(2); //軸の長さ　X：赤、Y：緑、z：青
        scene.add(axisHelper);


        // グループを作る
        const group = new THREE.Group();
        // 3D空間にグループを追加する
        scene.add(group); 

        // テクスチャー読み込み
        var textureLoader = new THREE.TextureLoader();  
        var texture = textureLoader.load("earth.jpg");
        var mat = new THREE.MeshPhongMaterial();
        mat.map = texture;

        //地球
        var earth = new THREE.SphereGeometry( 3, 8, 8 ); 
        //半径、垂直方向の分割数、水平方向の分割数
        var sphereMaterial = new THREE. MeshPhongMaterial( {color: 0x4444ff,wireframe: true} );
        var sphere = new THREE.Mesh( earth, sphereMaterial );
        //var sphere = new THREE.Mesh(geometry, mat);
        sphere.position.set( 0, 0, 0 );
        group.add( sphere );

        update();

        // テクスチャー読み込み
        var textureLoader = new THREE.TextureLoader();  
        var texture = textureLoader.load("moon.png");
        var mat = new THREE.MeshPhongMaterial();
        mat.map = texture;

        //月
        var moon = new THREE.SphereGeometry( 1.5, 8, 8 ); 
        //半径、垂直方向の分割数、水平方向の分割数
        var sphereMaterial = new THREE. MeshPhongMaterial( {color: 0x2222ff,wireframe: true} );
        var sphere = new THREE.Mesh( moon, sphereMaterial );
        //var sphere = new THREE.Mesh(geometry, mat);
        sphere.position.set( 10, 3, 4 );
        group.add( sphere );

        update();

        // 宇宙をスプライトで作成
        var textureLoader = new THREE.TextureLoader();  
        var texture = textureLoader.load("space.png");
        const material = new THREE.SpriteMaterial({ map: texture,});
        // 宇宙1
        const sprite1 = new THREE.Sprite(material);
        sprite1.scale.set(1,50,50);
        sprite1.position.set(25,-25,0); //位置を指定
        scene.add(sprite1);
        // 宇宙2
        const sprite2 = new THREE.Sprite(material);
        sprite2.scale.set(1,50,50);
        sprite2.position.set(-25,-25,0); //位置を指定
        scene.add(sprite1);
        // 宇宙3
        const sprite3 = new THREE.Sprite(material);
        sprite3.scale.set(50,50,1);
        sprite3.position.set(0,-25,-25); //位置を指定
        scene.add(sprite1);
        // 宇宙4
        const sprite4 = new THREE.Sprite(material);
        sprite4.scale.set(50,50,1);
        sprite4.position.set(0,-25,25); //位置を指定
        scene.add(sprite1);
        // 宇宙5
        const sprite5 = new THREE.Sprite(material);
        sprite5.scale.set(50,1,50);
        sprite5.position.set(0,-25,0); //位置を指定
        scene.add(sprite1);
        // 宇宙6
        const sprite6 = new THREE.Sprite(material);
        sprite6.scale.set(50,1,50);
        sprite6.position.set(0,25,0); //位置を指定
        scene.add(sprite1);





        // 毎フレーム時に実行されるループイベントです
        function update() {
          // レンダリング
          renderer.render(scene, camera);
          requestAnimationFrame(update);

           // 箱を回転させる
          earth.rotateY(0.01);
          group.rotation.y += 0.002;
         

        }
      }
    </script>
</body>
</html>
