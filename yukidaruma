 <script>
  var init = function() {

    var width = 800,
        height = 600;
  
    // レンダラーを作成
    var renderer = new THREE.WebGLRenderer();
    renderer.setSize(width, height);
    document.body.appendChild(renderer.domElement);
  
    // シーンを作成
    var scene = new THREE.Scene();
  
    // カメラを作成
    var camera = new THREE.PerspectiveCamera(45, width / height, 1, 1000);
// グループを作る
const group = new THREE.Group();
// 3D空間にグループを追加する
scene.add(group); 

//角柱〜円柱,目
var cylinderGeometry = new THREE.CylinderGeometry( 0.1, 0.1, 0.1, 360 );
//上の底面の半径、下の底面の半径、高さ、何角柱か
var cylinderMaterial = new THREE.MeshLambertMaterial( {color: 0x494a41} );
var cylinder = new THREE.Mesh( cylinderGeometry, cylinderMaterial );
cylinder.position.set( 0.6, 1.9, -9.6 );
cylinder.rotateZ(1.8);
group.add( cylinder );
//角柱〜円柱,目
var cylinderGeometry = new THREE.CylinderGeometry( 0.15, 0.15, 0.1, 360 );
//上の底面の半径、下の底面の半径、高さ、何角柱か
