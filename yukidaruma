cylinder.position.set( 0, 2.4, -10 );
group.add( cylinder );
//角柱〜円柱,腕
var cylinderGeometry = new THREE.CylinderGeometry( 0.05, 0.05, 2, 360 );
//上の底面の半径、下の底面の半径、高さ、何角柱か
var cylinderMaterial = new THREE.MeshLambertMaterial( {color: 0x783c1d} );
