var cylinderGeometry = new THREE.CylinderGeometry( 0.0755, 0.0755, 0.03, 360 );
//上の底面の半径、下の底面の半径、高さ、何角柱か
var cylinderMaterial = new THREE.MeshLambertMaterial( {color: 0xC38743} );
