var cylinderGeometry = new THREE.CylinderGeometry( 0.3, 0.5, 0.5, 360 );
//上の底面の半径、下の底面の半径、高さ、何角柱か
var cylinderMaterial = new THREE.MeshStandardMaterial( {color: 0xaa2200} );
